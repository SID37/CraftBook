@model CraftBook.Models.UserRecipe

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Recipe</h4>
<hr />
<article class="recipe-creator">
    <form class="col">
        <section>
            <section>
                <div class="name col">
                    <h5>Что будем готовить?</h5>
                    <input type="text" name="name" required />
                </div>
                <div class="col">
                    <b>Время приготовления</b>
                    <div class="time">
                        <div class="col">
                            <h5>Дни</h5>
                            <input type="number" name="days" value="0" required />
                        </div>
                        <div class="col">
                            <h5>Часы</h5>
                            <input type="number" name="hours" value="0" required />
                        </div>
                        <div class="col">
                            <h5>Минуты</h5>
                            <input type="number" name="minutes" required />
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <div class="avatar col">
                    <b>Как будет выглядеть?</b>
                    <input asp-for="Image" class="form-control" required />
                    <img src="/images/logo.png" id="ImageOut" class="recipe-avatar" />
                </div>
            </section>
        </section>
        <section>
            <div class="descriprion col">
                <b>Придумайте описание рецепта</b>
                <textarea asp-for="Description" class="form-control" required></textarea>
            </div>
        </section>
        <section>
            <div class="descriprion col">
                <b>Ход работы</b>
                <textarea asp-for="Instruction" class="form-control" required></textarea>
            </div>
        </section>
        <input type="submit" value="Create" class="btn btn-default" />
    </form>
</article>

@section Scripts {
    <environment include="Development">
        <script src="~/js/createRecipe.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/createRecipe.js" asp-append-version="true"></script>
    </environment>
}
