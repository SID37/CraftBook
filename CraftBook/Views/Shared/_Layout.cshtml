<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Craft Book</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/craftbook.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <script src="~/lib/craftbook.js.min" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <header>
        <img src="images/logo.png" alt="логотип" />
        <div>Craftbook</div>
    </header>
    <article>
        <section>
            <partial name="_InventoryPartial" />
        </section>
        <section>
            @RenderBody()
        </section>
    </article>
    <footer>
        <p>&copy; 2018 - Craft Book</p>
        <nav>
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a asp-area="" asp-controller="Home" asp-action="About">About</a>
            <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
        </nav>
    </footer>


    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>